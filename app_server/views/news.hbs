<!DOCTYPE html>
<html>
<head>
	<meta charset="UTF-8">
	<title>{{title}}</title>
	<link rel="stylesheet" href="css/style.css" type="text/css">
</head>
<body>
	<div id="background">
		<div id="page">
			{{>header}}
			<div id="contents">
				<div class="box">
					<div>
						<div id="news" class="body">
							<div class="sidebar">
								<h3>Latest News</h3>
								<ul>
									{{#each items.latestNews}}
										<li>
											<a href="news.html">{{this.title}}</a>
										</li>
									{{/each}}
								</ul>
								<h3>Vacation Tips</h3>
								<ul>
									{{#each items.vacationTips}}
										<li>
											<a href="news.html">{{this}}</a>
										</li>
									{{/each}}
								</ul>
							</div>
							<div>
								<h1>News</h1>
								{{#each items.articles}}
									<img src="{{this.image}}" alt="Article Image">
									<h2>{{this.title}}</h2>
									<span class="time">{{this.date}}<br> by: {{this.author}}</span>
									<p>{{this.content1}}</p>
									<br>
									<p>{{this.content2}}</p>
									<br>
									<p>{{this.content3}}</p>
								{{/each}}
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
		{{>footer}}
	</div>
</body>
</html>